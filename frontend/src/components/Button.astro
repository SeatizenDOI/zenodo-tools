---

// Usage: <Button title="Mybutton" link="https://link" /> 
// Usage: <Button title="Mybutton" link="/about" /> 

const { title, link } = Astro.props
---

<div class="btn">
    <a href={link}>{title}</a>
</div>

<style>
    .btn {
        color: red;
        width: 200px;
        background-color: red;
    }

</style>